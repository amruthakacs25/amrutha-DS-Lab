#include <stdio.h>

#define MAX 100

int ht[MAX];
int m;

void init() {
    for (int i = 0; i < m; i++)
        ht[i] = -1;
}

void insert(int key) {
    int index = key % m;
    int start = index;

    while (ht[index] != -1) {
        index = (index + 1) % m;
        if (index == start) {
            printf("Hash table is full\n");
            return;
        }
    }
    ht[index] = key;
}

void display() {
    for (int i = 0; i < m; i++) {
        if (ht[i] != -1)
            printf("%d : %d\n", i, ht[i]);
        else
            printf("%d : --\n", i);
    }
}

int main() {
    int n, key;

    printf("Enter number of memory locations: ");
    scanf("%d", &m);

    init();

    printf("Enter number of employee records: ");
    scanf("%d", &n);

    printf("Enter employee keys:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &key);
        insert(key);
    }

    printf("Hash Table:\n");
    display();

    return 0;
}
